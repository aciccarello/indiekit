{
  "extends": [
    "stylelint-config-recommended"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true,
    "selector-pseudo-element-colon-notation": "double",
    "value-keyword-case": [
      "lower",
      {
        "camelCaseSvgKeywords": false
      }
    ]
  }
}