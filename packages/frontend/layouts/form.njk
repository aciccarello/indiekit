{% extends "default.njk" %}

{%- set legendText %}
  {%- if parent %}<span class="fieldset__parent">{{ parent }}</span> {% endif %}
  {{- title | safe }}
{%- endset -%}

{% block main %}
<form class="form" method="post">
  {{ errorSummary({
    title: {
      text: errorSummaryTitle or "There is a problem"
    },
    errorList: errors | errorList
  }) | indent(2) if errors }}
  {% call fieldset({
    legend: {
      classes: "visually-hidden" if minimalui,
      text: legendText,
      isPageHeading: true
    }
  }) -%}
    {% block fieldset %}{% endblock %}
  {% endcall %}
</form>
{% endblock %}