{% extends "default.njk" %}

{% block main %}
{% call article({
  title: title
}) -%}
  <p>
    {%- if uri %}<a href="{{ uri }}">{% endif -%}
    {{- content | markdown("inline") | safe if content -}}
    {%- if uri -%}</a>{%- endif -%}.
  </p>
  <details>
    <summary><small>Status code: <code>{{ status }}</code></small></summary>
    <pre><code>{{ stack }}</code></pre>
  </details>
{%- endcall %}
{% endblock %}