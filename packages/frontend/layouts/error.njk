{% extends "document.njk" %}

{% set appClasses = "app--minimalui" %}
{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block content %}
  <div class="prose s-linear">
    <p>
      {%- if uri %}<a href="{{ uri }}">{% endif -%}
      {{- content | markdown("inline") | safe if content -}}
      {%- if uri -%}</a>{%- endif -%}.
    </p>
    <details>
      <summary><small>Status code: <code>{{ status }}</code></small></summary>
      <pre><code>{{ stack }}</code></pre>
    </details>
  </div>
{% endblock %}