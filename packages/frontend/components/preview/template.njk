<div class="{{ classes("preview", opts.field) }}">
  <h3 class="preview__title">
    <output for="{{ opts.title.for }}" data-preview-target="title" data-placeholder="{{ opts.title.placeholder }}">{{ opts.title.value }}</output>
  </h3>
  <p class="preview__text">
    <output for="{{ opts.text.for }}" data-preview-target="text" data-placeholder="{{ opts.text.placeholder }}">{{ opts.text.value }}</output>
  </p>
  <p class="preview__url">
    <output for="{{ opts.url.for }}" data-preview-target="url" data-placeholder="{{ opts.url.placeholder }}">{{ opts.url.value }}</output>
  </p>
  <p class="preview__date">
    <date>{{ opts.date | date("PPPppp", opts.locale) }}</date>
  </p>
</div>
