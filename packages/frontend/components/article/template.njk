{%- set classes = "article" + (" " + opts.classes if opts.classes) -%}
<article class="{{ classes }}">
{%- if opts.title %}
  <h1 class="article__title">
    {%- if opts.parent -%}
      <span class="article__parent">{{ opts.parent }}</span>
    {%- endif -%}
    {{- opts.title -}}
  </h1>
{%- endif %}
  <div class="article__body s-linear">
    {{ opts.content | markdown | safe if opts.content }}
    {{ caller() if caller }}
  </div>
</article>