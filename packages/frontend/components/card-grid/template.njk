<ol class="{{ classes("card-grid", opts) }}" role="list">
  {%- for item in opts.items %}
  <li class="card-grid__item">
    <img class="{{ classes("card__image", item.image) }}" src="{{ item.image.src }}" alt="{{ item.image.alt }}" {{- attributes(item.image.attributes) }}>
    <div class="card__body">
      <h2 class="card__title"><a href="{{ item.url }}">{{ item.name }}</a></h2>
      <p class="card__meta">{{ item.description }}</p>
    </div>
  </li>
  {%- endfor %}
</ol>