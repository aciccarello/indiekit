{%- if opts.text -%}
{%- set label -%}
<label class="{{ classes("label", opts.classes) }}"
  {%- for attribute, value in opts.attributes %} {{attribute}}="{{value}}"{% endfor %}
  {%- if opts.for %} for="{{ opts.for }}"{% endif %}>
  {{- opts.text | safe -}}
</label>
{%- endset -%}
{{ label | safe }}
{%- endif -%}