{%- from "../navigation/macro.njk" import navigation with context -%}
<header class="{{ classes("header", opts) }}">
  <div class="header__container">
    <div class="header__title">
      <a class="u-url" href="{{ opts.url or "/" }}">
        <span class="p-name">{{ opts.name }}</span>
      </a>
    </div>
    {{ navigation(opts.navigation) if opts.navigation }}
  </div>
</header>