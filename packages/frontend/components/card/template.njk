{%- from "../badge/macro.njk" import badge with context -%}
<article class="card">
  {%- if opts.photo %}
  <div class="card__photo">
    <img src="{{ opts.photo.url | imageUrl(application) }}" alt="{{ opts.photo.alt }}"{{- attributes(opts.photo.attributes) }}>
  </div>
  {%- endif %}
  <div class="card__body">
    <h2 class="card__title">
      <a href="{{ opts.url }}">
        {{- icon(opts.icon) if opts.icon -}}
        {{- opts.title -}}
      </a>
    </h2>
    {%- if opts.description %}
    <div class="card__meta">
      {{ opts.description | markdown | striptags | excerpt(20, publication.locale) | safe }}
    </div>
    {%- endif %}
    {% if opts.published or opts.badges %}
    <footer class="card__footer">
      <time datetime="{{ opts.published }}">{{ opts.published | date("PPp") }}</time>
      {%- for item in opts.badges %}
        {{ badge(item) if item }}
      {%- endfor %}
    </footer>
    {% endif %}
  </div>
</div>