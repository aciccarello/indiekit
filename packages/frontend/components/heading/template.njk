{%- from "../actions/macro.njk" import actions with context -%}
<header class="{{ classes("heading", opts) }}">
  <h1 class="heading__title">
    {%- if opts.parent.href -%}
      <a class="heading__parent" href="{{ opts.parent.href }}">{{ opts.parent.text }}</a>
    {%- elif opts.parent -%}
      <span class="heading__parent">{{ opts.parent.text }}</span>
    {%- endif %}
    {{ opts.text }}
  </h1>
  {{- actions({ items: opts.actions }) if opts.actions.length }}
</header>
