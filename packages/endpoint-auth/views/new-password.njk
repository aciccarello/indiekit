{% extends "form.njk" %}

{% set appClasses = "app--minimalui" %}
{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block form %}
  {{ input({
    name: "password",
    type: "password",
    value: fieldData("password").value,
    autocomplete: "new-password",
    label: heading({ text: __("auth.newPassword.title") }),
    hint: __("auth.newPassword.password.hint"),
    errorMessage: fieldData("password").errorMessage
  }) }}

  {{ button({
    text: __("auth.newPassword.submit"),
    classes: "button--block"
  }) | indent(2) }}

  {{ textarea({
    classes: "textarea--monospace",
    name: "secret",
    label: __("auth.newPassword.secret.label"),
    hint: __("auth.newPassword.secret.hint", "<code>PASSWORD_SECRET</code>"),
    rows: 2,
    value: secret,
    attributes: {
      readonly: true,
      onclick: "this.select();"
    }
  }) if secret }}
{% endblock %}