{% from "authorize/macro.njk" import authorize with context %}

{% extends "form.njk" %}

{% set appClasses = "app--minimalui" %}
{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block fieldset %}
  {{ authorize({
    client: client,
    me: me,
    key: "auth.consent." + authType + ".text"
  }) }}

  {{ warningText({
    text: __("auth.consent.pkce.text", { client: client.name })
  }) if not usePkce }}

  {{ checkboxes({
    idPrefix: "scope",
    name: "scope",
    fieldset: {
      legend: {
        text: __("scope.label")
      }
    },
    items: scopeItems,
    errorMessage: fieldData("scope").errorMessage
  }) if authType === "authorize" }}

  {#- Hidden field exposing username to password managers -#}
  {{ input({
    name: "me",
    type: "hidden",
    value: me,
    autocomplete: "username",
    attributes: {
      readonly: true
    }
  }) }}

  {{ input({
    id: "password",
    name: "password",
    type: "password",
    value: fieldData("password").value,
    autocomplete: "current-password",
    label: {
      text: __("auth.consent.password.label")
    },
    errorMessage: fieldData("password").errorMessage
  }) }}

  {{ input({
    name: "_csrf",
    type: "hidden",
    value: csrfCode
  }) }}
{% endblock %}

{% block buttons %}
  {{ button({
    text: __("auth.consent." + authType + ".submit"),
    classes: "button--block"
  }) | indent(2) }}

  {{ hint({
    text: __("auth.consent.redirect", "<samp>" + redirect_uri + "</samp>")
  }) | indent(2) }}
{% endblock %}