{% extends "form.njk" %}

{% block fieldset %}
  {{ input({
    id: "file",
    name: "file",
    value: errors.file.value or file,
    label: {
      text: __("files.form.file.label")
    },
    type: "file",
    errorMessage: {
      text: errors.file.msg
    } if errors.file
  }) | indent(2) }}
{% endblock %}

{% block buttons %}
  <div class="button-group">
    {{ button({
      text: __("files.form.submit"),
      attributes: {
        formenctype: "multipart/form-data"
      }
    }) | indent(4) }}

    {{ prose({
      text: "[" + __("files.form.cancel") + "](" + back + ")"
    }) | indent(4) }}
  </div>
{% endblock %}