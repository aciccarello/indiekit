{% extends "form.njk" %}

{% block form %}
  {{ heading({
    text: title,
    parent: parent
  }) }}

  {{ prose({ text: __("files.delete.note", publication.store.info.name) }) }}

  {{ input({
    name: "url",
    value: url,
    type: "hidden"
  }) }}

  {{ button({
    classes: "button--warning",
    text: __("files.delete.submit")
  }) }}

  {{ prose({
    text: "[" + __("files.delete.cancel") + "](" + back + ")"
  }) }}
{% endblock %}