{% extends "document.njk" %}

{% block content %}
  {% set type = data["media-type"] %}
  {% if type === "audio" %}
    <audio src="{{ data.url }}" controls></audio>
  {% elif type === "photo" %}
    <img src="{{ data.url }}" onerror="this.src='/assets/not-found.svg'; this.className='not-found';">
  {% elif type === "video" %}
    <video src="{{ data.url }}" controls></video>
  {% else %}
    {{ prose({
      html: "<a href=\"" + data.url + "\" download>" + __("files.file.download") + "</a>"
    }) }}
  {% endif %}

  {% call section({ title: __("files.file.properties") }) %}
    {{ summary({ rows: summaryRows(data) }) }}
  {% endcall %}
{% endblock %}