{% extends "form.njk" %}

{% from "preview/macro.njk" import preview %}
{% set mainControllers = "preview" %}

{% block fieldset %}
  {{ preview({
    title: {
      for: "name",
      value: name,
      placeholder: __("share.name.label")
    },
    text: {
      for: "content",
      value: content,
      placeholder: __("share.content.label")
    },
    url: {
      for: "bookmark-of",
      value: bookmarkOf or url,
      placeholder: __("share.bookmark-of.label")
    },
    date: "now",
    locale: application.locale
  }) }}

  {{ input({
    id: "bookmark-of",
    name: "bookmark-of",
    type: "url",
    value: fieldData("bookmark-of").value or data.url,
    label: {
      text: __("share.bookmark-of.label")
    },
    attributes: {
      "placeholder": "https://",
      "data-action": "preview#url"
    },
    errorMessage: fieldData("bookmark-of").errorMessage
  }) }}

  {{ input({
    id: "name",
    name: "name",
    value: fieldData("name").value,
    label: {
      text: __("share.name.label")
    },
    attributes: {
      "data-action": "preview#title"
    },
    errorMessage: fieldData("name").errorMessage
  }) }}

  {{ textarea({
    id: "content",
    name: "content",
    value: content,
    optional: true,
    label: {
      text: __("share.content.label")
    },
    attributes: {
      "data-action": "preview#text"
    }
  }) }}

  {{ input({
    name: "access_token",
    type: "hidden",
    value: token
  }) }}

  {{ input({
    name: "h",
    type: "hidden",
    value: "entry"
  }) }}
{% endblock %}

{% block buttons %}
  {{ button({
    text: __("share.submit")
  }) if token else warningText({
    text: __("scope.none.label")
  }) }}
{% endblock %}