{% extends "form.njk" %}

{% set appClasses = "app--minimalui" %}
{% set me = publication.me | friendlyUrl %}

{% block header %}
  {{ header({
    url: application.url,
    name: application.name
  }) }}
{% endblock %}
{% block form %}
  {{ heading({
    text: title
  }) | indent(2) }}

  {{ prose({
    text: __("session.login.description", "**" + me + "**")
  }) | indent(2) }}

  {{ button({
    text: __("session.login.submit"),
    classes: "button--block"
  }) | indent(2) }}
{% endblock %}