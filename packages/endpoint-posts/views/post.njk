{% extends "document.njk" %}

{% set postHtml = data.content.html or "" %}
{% set postMedia -%}
{%- if data.audio -%}
  {%- for item in data.audio -%}
    <audio src="{{ item.url | url(publication.me) }}" controls>
  {%- endfor -%}
{%- elif data.photo -%}
  {%- for item in data.photo -%}
    <img src="{{ item.url | url(publication.me) }}" alt="{{ item.alt }}">
  {%- endfor -%}
{%- elif data.video -%}
  {% for item in data.video -%}
    <video src="{{ item.url | url(publication.me) }}" controls>
  {%- endfor -%}
{%- endif -%}
{%- endset %}

{% block content %}
  {{ badge({
    color: statusTypes.deleted.color,
    text: __(statusTypes.deleted.text)
  }) if data.deleted }}

  {{ badge({
    color: statusTypes[postStatus].color,
    text: __(statusTypes[postStatus].text)
  }) if postStatus }}

  {{ badge({
    color: statusTypes[data.visibility].color,
    icon: statusTypes[data.visibility].icon,
    text: __(statusTypes[data.visibility].text)
  }) if postStatus === "published" and statusTypes[data.visibility] }}

  {{ badge({
    color: statusTypes.syndicated.color,
    icon: statusTypes.syndicated.icon,
    text: __(statusTypes.syndicated.text)
  }) if postStatus === "published" and data.syndication and statusTypes.syndicated }}

  {{ prose({ html: postHtml + postMedia }) }}

  {% if postStatus === "published" and data["mp-syndicate-to"] %}
    {% include "endpoint-posts-syndicate.njk" %}
  {% endif %}

  {% call section({ title: __("posts.post.properties") }) %}
    {{ summary({ rows: summaryRows(data) }) }}
  {% endcall %}
{% endblock %}