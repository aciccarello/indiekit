{%- from "file/macro.njk" import file -%}
{% extends "document.njk" %}

{% block content %}
  {%- if files %}
  {{ fileGrid({
    items: files
  }) }}
  {{ pagination({
    items: items,
    previous: {
      href: previous.href
    } if previous,
    next: {
      href: next.href
    } if next,
    results: {
      from: results.from,
      to: results.to,
      count: results.count,
      type: "files"
    }
  }) }}
{%- else -%}
  <p>{{ __("media.files.none") }}<p>
{%- endif %}
{% endblock %}