{
  "name": "Indiekit",
  "description": "An IndieWeb publishing toolkit.",
  "keywords": ["indieweb", "micropub"],
  "repository": "https://github.com/getindiekit/indiekit",
  "logo": "https://avatars.githubusercontent.com/u/68553280?s=120",
  "success_url": "/",
  "env": {
    "GITHUB_TOKEN": {
      "description": "A GitHub personal access token",
      "required": true
    },
    "GITHUB_USER": {
      "description": "Username on GitHub",
      "required": true
    },
    "GITHUB_REPO": {
      "description": "Name of the repository files will be saved to",
      "required": true
    },
    "PUBLICATION_URL": {
      "description": "URL of the website you want to publish to",
      "required": true
    },
    "MONGODB_URL": {
      "description": "URL of a MongoDB host (optional)",
      "required": false
    }
  }
}
