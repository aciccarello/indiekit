{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsdoc/recommended",
    "plugin:unicorn/recommended",
    "prettier"
  ],
  "ignorePatterns": ["_site/**"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["jsdoc", "unicorn"],
  "rules": {
    "jsdoc/no-undefined-types": [
      1,
      {
        "definedTypes": ["NodeJS"]
      }
    ]
  }
}
